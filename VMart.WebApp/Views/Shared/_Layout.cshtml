    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function () {
            loadCategory();
        });
        var addToCart = (productId,productName) => {
            var cartDetails = localStorage.getItem('cart-detail');
            if (cartDetails == null) {
                var detailsArr = [];
                var obj = {
                    ProductId: productId,
                    Qty: 1,
                    ProductName: productName
                };
                detailsArr.push(obj);
                localStorage.setItem('cart-detail', JSON.stringify(detailsArr));
            } else {
                var detailsArr = JSON.parse(cartDetails);
                var product = detailsArr.find(p => p.ProductId === productId);

                if (product) {
                    product.Qty += 1;
                } else {
                    var obj = {
                        ProductId: productId,
                        Qty: 1,
                        ProductName: productName
                    };
                    detailsArr.push(obj);
                }
                localStorage.setItem('cart-detail', JSON.stringify(detailsArr));
            }
            helper.alert(200, 'Add to cart successfully.');
        };
        var loadCategory = () => {
            $.post('/Home/GetCategory').done(function (res) {
                if (res.isSuccess) {
                    var _menu = res.result.map((v, i) => {
                        return `<a class="py-2 d-none d-md-inline-block" href="/home/product/${v.id}">${v.name}</a>`;
                    });
                    $('#menu').append(_menu);
                }
                $('#menu').append(`<a class="py-2 d-none d-md-inline-block" href="/Home/Register">Registered</a>
                                                    <a class="py-2 d-none d-md-inline-block" href="/Home/Login">Login</a> <a class="py-2 d-none d-md-inline-block" href="/Home/Cart">Shopping Cart</a><a class="py-2 d-none d-md-inline-block" href="/Home/Logout">Logout</a> `)
            }).fail(function (xhr) {
                console.log(xhr);
            });
        }
    </script>
